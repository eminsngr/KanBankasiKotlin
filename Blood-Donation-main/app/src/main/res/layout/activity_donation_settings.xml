<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.DonationSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <RadioGroup
            android:id="@+id/donationTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/donorOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kan Bağışçısı Olmak İstiyorum"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/recipientOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kan Bağışına İhtiyacım Var"
                android:textSize="12sp" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/heightInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/heightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Boy (cm)"
                android:inputType="number"
                android:textSize="12sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/weightInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kilo (kg)"
                android:inputType="number"
                android:textSize="12sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sigara Kullanımı" />
        <Spinner
            android:id="@+id/smokingFrequencySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/smoking_frequency" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Alkol Kullanımı" />
        <Spinner
            android:id="@+id/alcoholFrequencySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/alcohol_frequency" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cinsel Hayat" />
        <Spinner
            android:id="@+id/sexualActivitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sexual_activity" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dövme" />
        <Spinner
            android:id="@+id/tattooSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/tattoo" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Kaydet" />
    </LinearLayout>
</ScrollView>
